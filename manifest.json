{
  "manifest_version": 3,
  "name": "Wellbyte Booster",
  "version": "1.0",
  "description": "Boost your well-being with break reminders and activity suggestions!",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "scripts": [
      "popup.js"
    ]
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "audio/level-up.mp3" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}